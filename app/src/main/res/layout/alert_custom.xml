<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"
        app:cardElevation="20dp"
        android:layout_gravity="center">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/img_cus"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="#B72020"
                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/baseline_nav"
                    android:tint="@color/white"

                    android:layout_centerInParent="true"/>


            </RelativeLayout>


            <TextView
                android:id="@+id/txt_cus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_cus"
                android:text="This app was designed and developed by Tajim to make gold price tracking simple, accurate, and effortless.\n\nYou can reach out to me through the links below."
                android:layout_margin="25dp"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/decline_cus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:layout_below="@+id/txt_cus"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/allow_cus"
                android:translationX="-90dp"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="5dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"

                />

            <TextView
                android:id="@+id/allow_cus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy policy"
                android:layout_below="@+id/txt_cus"
                android:textStyle="bold"
                android:textColor="#075E54"
                android:layout_alignParentRight="true"
                android:translationX="-50dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="5dp"

                />




        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>